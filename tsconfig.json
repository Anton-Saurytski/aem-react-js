{
  "compileOnSave": true,
  "sortOutput": true,
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "module": "commonjs",
    "jsx": "react",
    "noImplicitAny": true,
    "preserveConstEnums": false,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
