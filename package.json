{
  "name": "aem-react-js",
  "version": "0.4.2",
  "description": "Aem components written in React.",
  "scripts": {
    "posttest": "nyc report --reporter=json && codecov -f coverage/*.json",
    "build": "tsc",
    "test": "npm run build && npm run lint &&  nyc mocha --compilers ts:espower-typescript/guess --require lib/test/setup.js 'lib/**/__tests__/**/*.js'",
    "single-test": "nyc mocha --compilers ts:espower-typescript/guess --require lib/test/setup.js",
    "test-html": "npm run test && nyc report --reporter=html",
    "lint": "tslint 'src/**/*.{ts,tsx}'",
    "preversion": "npm test && npm run build",
    "version": "git add .",
    "postversion": "git push origin master --tags && npm publish",
    "format": "prettier --single-quote --no-bracket-spacing --parser typescript --write 'src/**/*.{ts,tsx}'"
  },
  "author": {
    "name": "Stefan Meyer",
    "email": "stefan.meyer@sinnerschrader.com"
  },
  "license": {
    "type": "MIT",
    "url": "https://github.com/sinnerschrader/aem-react/blob/master/LICENSE.md"
  },
  "keywords": [
    "aem",
    "cq5",
    "react",
    "cms",
    "typescript",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "http://www.github.com/sinnerschrader/aem-react-js"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "codecov": "^2.0.2",
    "enzyme": "^2.5.1",
    "espower-typescript": "^8.0.0",
    "jsdom": "11.0.0",
    "mocha": "^3.1.2",
    "nyc": "^11.0.2",
    "power-assert": "^1.2.0",
    "react-addons-test-utils": "^15.3.1",
    "tslint": "^5.0.0",
    "typescript": "^2.1.1",
    "prettier": "1.5.2"
  },
  "dependencies": {
    "@types/react": "15.0.33",
    "@types/chai": "4.0.1",
    "@types/jsdom": "11.0.0",
    "@types/mocha": "2.2.41",
    "@types/react-addons-shallow-compare": "0.14.20",
    "@types/enzyme": "2.8.1",
    "@types/react-addons-test-utils": "0.14.19",
    "@types/react-router": "3.0.12",
    "@types/history": "3.2.1",
    "@types/react-dom": "15.5.1",
    "es6-promise": "^4.0.5",
    "function.name": "^1.0.5",
    "react": "^15.3.1",
    "react-addons-shallow-compare": "^15.3.2",
    "react-dom": "^15.3.1",
    "react-router": "^3.0.0"
  }
}
