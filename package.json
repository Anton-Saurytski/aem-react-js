{
  "name": "aem-react-js",
  "version": "0.2.2",
  "description": "Aem components with React.",
  "main": "index.js",
  "scripts": {
    "preinstall": "npm install typescript & tsd install",
    "build": "tsc --declaration",
    "test": "npm run lint &&  mocha --compilers ts:espower-typescript/guess test/*.ts",
    "lint": "eslint . & tslint *.tsx",
    "postinstall": "npm run build",
    "preversion": "npm test && npm run build",
    "version": "git add .",
    "postversion": "git push && git push --tags && npm publish"
  },
  "keywords": [
    "aem",
    "cq5",
    "react",
    "cms",
    "typescript",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "http://www.github.com/sinnerschrader/aem-react-js"
  },
  "devDependencies": {
    "typescript": "1.6.2",
    "tsd": "^0.6.5",
    "eslint": "^1.6.0",
    "espower-typescript": "^3.0.0",
    "mocha": "^2.3.4",
    "power-assert": "^1.2.0",
    "tslint": "^2.5.1"
  },
  "dependencies": {
    "react": "^0.13.3"
  }
}
